  read -p "Add user account to run rtorrent/qbittorrent:" QB_USER
fi

FG_USER=$QB_USER
HOMEDIR=$(cat /etc/passwd | grep "$FG_USER": | cut -d: -f6)
sudo mkdir $HOMEDIR/.flexget
sudo wget -qO conf.yml https://raw.githubusercontent.com/lonecrane/seedbox/master/flexget/conf.yml
sudo mv conf.yml $HOMEDIR/.flexget/config.yml
sudo chown -R $FG_USER:$FG_USER $HOMEDIR/.flexget
flexget web passwd Love321654@
sudo wget -qO flexget.service https://raw.githubusercontent.com/lonecrane/seedbox/master/flexget/flexget.service
sudo sed -i 's@{{BT_USER}}@'"$FG_USER"'@g' flexget.service;
sudo mv flexget.service /etc/systemd/system/
sudo systemctl enable flexget
sudo systemctl start flexget
sudo systemctl status flexget


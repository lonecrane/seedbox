sudo mv qBittorrent.conf $HOMEDIR/.config/qBittorrent/qBittorrent.conf
sudo chown -R "$QB_USER"."$QB_USER" $HOMEDIR/.config/

# (2) 4.x用上面的会导致tracker不能解析等问题
# 4.1.2默认连不上web-ui，需要加上以下语句；4.1.5中无此问题
WebUI\Address=*
WebUI\ServerDomains=*


